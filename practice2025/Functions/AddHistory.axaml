<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="practice2025.Functions.AddHistory"
        xmlns:vm="using:practice2025.Models"
        Title="Добавить запись"
        Icon="avares://practice2025/Assets/logo.png">

    <DockPanel>
        <StackPanel Margin="10" Spacing="10">
            <TextBlock Text="Выберите пациента" FontSize="14"/>
            <ComboBox Name="clients" Width="500">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="vm:Client">
                        <StackPanel Orientation="Horizontal" Spacing="5">
                            <TextBlock Text="{Binding ClientSurname}"/>
                            <TextBlock Text="{Binding ClientName}"/>
                            <TextBlock Text="{Binding ClientPatronymic}"/>
                            <TextBlock Text="{Binding ClientPassport}"/>
                        </StackPanel>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Добавить пациента" Click="OnAddClientClick"/>
            
            <TextBlock Text="Выберите диагноз" FontSize="14"/>
            <ComboBox Name="diagnosis">
                <ComboBox.ItemTemplate>
                    <DataTemplate DataType="vm:Diagnosis">
                        <TextBlock Text="{Binding DiagnosisName}"/>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
            <Button Content="Добавить диагноз" Click="addDiag"/>
            <Button Content="Добавить запись" Click="Button_Click"/>
            <TextBlock Name="Mess" Width="200"/>
        </StackPanel>
    </DockPanel>
</Window>