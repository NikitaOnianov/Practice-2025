<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        d:DesignWidth="600"
        d:DesignHeight="450"
        x:Class="practice2025.AddClient"
        x:CompileBindings="False"
        Background="LightYellow"
        Title="Добавить клиента">
	<DockPanel>
		<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
			<TextBlock Text="Добавить клиента" HorizontalAlignment="Center"/>
		</StackPanel>
		<StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="5">
			<TextBox x:Name="ClientNameBox" Watermark="Введите имя" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientSurnameBox" Watermark="Введите фамилию" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientPatronymicBox" Watermark="Введите отчество" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientSnilsBox" Watermark="Введите СНИЛС" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientPassportBox" Watermark="Введите паспорт" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientBirthdayBox" Watermark="Введите дату рождения" VerticalAlignment="Center" Margin="5" Width="200"/>
			
			<TextBox x:Name="ClientPolisBox" Watermark="Введите полис" VerticalAlignment="Center" Margin="5" Width="200"/>
			<Button Content="Добавить клиента" HorizontalAlignment="Center" Margin="5" Width="200" Click="AddClient_OnClick"/>
			<Button Content="Назад" HorizontalAlignment="Center" Margin="5" Width="200" Click="BackOnUser"/>
			<TextBlock Text="" x:Name="UserAdd" VerticalAlignment="Center" Margin="200,5,0,0" Width="200"/>
			<TextBlock Text="" x:Name="UserNotAdd" VerticalAlignment="Center" Margin="200,5,0,0" Width="200"/>
		</StackPanel>
	</DockPanel>
</Window>
