<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1000" d:DesignHeight="550"
        x:Class="practice2025.Cabinets.Doctor"
        Title="Врач"
		Icon="avares://practice2025/Assets/logo.png"
		xmlns:vm="using:practice2025.Models">
	<StackPanel HorizontalAlignment="Center" Spacing="15">
		<ScrollViewer>
		<StackPanel>
		<Border CornerRadius="25" Background="Red" Padding="10" Width="600">
			<StackPanel>
				<StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
					<TextBlock Text="Ваше имя"/>
					<TextBlock Name="Username"/>
				</StackPanel>
				<StackPanel Orientation="Horizontal" Spacing="15" HorizontalAlignment="Center">
					<TextBlock Text="Ваша должность"/>
					<TextBlock Name="Usertype"/>
				</StackPanel>
			</StackPanel>
		</Border>
			<TextBlock Name="Mes" HorizontalAlignment="Center"/>
		<Border
				Background="Red"
				CornerRadius="10"
				Padding="20"
				Margin="20"
				Width="900"
				Height="300">
			
				
			<ListBox Name="ListClients">
				<ListBox.ItemTemplate>
					<DataTemplate x:DataType="vm:patient_turnoutDTO">
						<StackPanel>
							<ScrollViewer>
							<StackPanel Orientation="Horizontal">
								<StackPanel Width="100">
									<TextBlock Text="Дата"/>
									<TextBlock Text="{Binding HistoryDate}"/>
								</StackPanel>
								<TextBlock Text=" "/>
								<StackPanel  Width="100">
									<TextBlock Text="Время"/>
									<TextBlock Text="{Binding HistoryTime}"/>
								</StackPanel>
								<TextBlock Text=" "/>
								<StackPanel Width="300">
									<TextBlock Text="ФИО"/>
									<TextBlock Text="{Binding Client}" TextWrapping="Wrap"/>
								</StackPanel>
								<TextBlock Text=" "/>
								
								<StackPanel Width="200">
									<TextBlock Text="Диагноз"/>
									<TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap"/>
								</StackPanel>
								<CheckBox
									 Content="Обслуживание "
										Margin="20,0,0,0"
										VerticalAlignment="Center"
										IsChecked="{Binding IsPresent, Mode=TwoWay}"/>
							</StackPanel>
							</ScrollViewer>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>

		</Border>
		
		<StackPanel HorizontalAlignment="Center">
			<Button Content="Сохранить изменения" Click="SaveChage" Background="Green" Width="200"/>
			<Button Content="Обновить" Click="update" Background="Orange" Width="200"/>
			<Button Content="Выйти"  Click="Exit" Background="YellowGreen" Width="200"/>
		</StackPanel>
		
		</StackPanel>
		</ScrollViewer>
	</StackPanel>
</Window>
