<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="practice2025.Cabinets.UserWindow"
        x:CompileBindings="True"
        Title="Оператор ЭВМ"
        Width="800" Height="450"
        MinWidth="500" MinHeight="400"
		Icon="avares://practice2025/Assets/logo.png"
		xmlns:vm="using:practice2025.Models">
	<DockPanel>
		<ScrollViewer>
			<StackPanel HorizontalAlignment="Center">
				<Border CornerRadius="25" Background="Red" Padding="10" Width="600">
					<StackPanel VerticalAlignment="Center" Spacing="5">
						<TextBlock FontSize="16" FontWeight="Bold">
							<Run Text="Имя: "/>
							<Run x:Name="NameTextBlock"/>
						</TextBlock>
						<TextBlock>
							<Run Text="Роль: "/>
							<Run x:Name="TypeTextBlock"/>
						</TextBlock>
					</StackPanel>
				</Border>
				<Border
				Background="Red"
				CornerRadius="10"
				Padding="20"
				Margin="20"
				Width="700"
				Height="300">
			
				
			<ListBox Name="ListClients">
				<ListBox.ItemTemplate>
					<DataTemplate x:DataType="vm:patient_turnoutDTO">
						<StackPanel>
							<ScrollViewer>

							<StackPanel Orientation="Horizontal">

								<StackPanel Width="100">
									<TextBlock Text="Дата"/>
									<TextBlock Text="{Binding HistoryDate}"/>
								</StackPanel>
								<TextBlock Text=" "/>
								<StackPanel  Width="100">
									<TextBlock Text="Время"/>
									<TextBlock Text="{Binding HistoryTime}"/>
								</StackPanel>
								<TextBlock Text=" "/>
								<StackPanel Width="250">
									<TextBlock Text="ФИО"/>
									<TextBlock Text="{Binding Client}" TextWrapping="Wrap"/>
								</StackPanel>
								<TextBlock Text=" "/>
								
								<StackPanel Width="200">
									<TextBlock Text="Диагноз"/>
									<TextBlock Text="{Binding Diagnosis}" TextWrapping="Wrap"/>
								</StackPanel>
							</StackPanel>

							</ScrollViewer>
						</StackPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>
				<Button Content="Добавить запись" Click="Button_Click" Background="green"/>
				<Button Content="Добавить пациента" Click="Button_Click_2" Background="green"/>
				<Button Content="Обновить" Click="Button_Click_1" Background="green"/>
				<Button Content="Выйти" Click="OnLogoutClick" Background="red"/>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>
</Window>