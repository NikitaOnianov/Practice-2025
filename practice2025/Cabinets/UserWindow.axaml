<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        x:Class="practice2025.Cabinets.UserWindow"
        x:CompileBindings="True"
        Title="Оператор ЭВМ"
        Width="600" Height="450"
        MinWidth="500" MinHeight="400"
		Icon="avares://practice2025/Assets/logo.png">
	<DockPanel>
		<ScrollViewer>
			<StackPanel>
				<Border CornerRadius="25" Background="Red" Padding="10" Width="600">
					<StackPanel VerticalAlignment="Center" Spacing="5">
						<TextBlock FontSize="16" FontWeight="Bold">
							<Run Text="Имя: "/>
							<Run x:Name="NameTextBlock"/>
						</TextBlock>
						<TextBlock>
							<Run Text="Роль: "/>
							<Run x:Name="TypeTextBlock"/>
						</TextBlock>
					</StackPanel>
				</Border>
				<Button Content="Добавить пациента" Click="OnAddClientClick"/>
				<Button Content="Выййти" Click="OnLogoutClick"/>
			</StackPanel>
		</ScrollViewer>
	</DockPanel>
</Window>