<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="practice2025.Entry.MainWindow"
        x:CompileBindings="True"
        Title="Авторизация"
		Icon="avares://practice2025/Assets/logo.png">
	<DockPanel >
		<StackPanel HorizontalAlignment="Center" DockPanel.Dock="Top">
			<TextBlock Text="С возвращением в больницу!"/>
			<Image
					Height="200"
					Width="200"
					Name="ImagePath"/>
		</StackPanel>
		<StackPanel Spacing="15" Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="5">
			<TextBox Width="300" x:Name="LoginTextBox" Watermark="Введите логин"/>

			<StackPanel Orientation="Horizontal">
				<TextBox Width="260" x:Name="PasswordTextBox" PasswordChar="*" Watermark="Введите пароль"/>
				<Button Content="👁" Click="TogglePasswordVisibility"/>
			</StackPanel>

			<StackPanel Spacing="5" Orientation="Horizontal">
				<Button  Content="Зарегистрироваться" Click="registration"/>
				<Button  Content="Войти" Click="AuthorizeButton"/>
			</StackPanel>
			<TextBlock x:Name="ErrorBlock" Foreground="Red"/>
		</StackPanel>

	</DockPanel>
</Window>